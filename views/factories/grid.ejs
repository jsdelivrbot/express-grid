<script>
	$("#jsGrid").jsGrid({
		width: "100%",
		filtering: true,
		inserting: false,
		editing: true,
		sorting: false,
		autoload: true,
		paging: true,
		pageLoading: true,
		css: "kv-grid-table table table-bordered table-striped kv-table-wrap",
		pageSize: 20,
		pageButtonCount: 10,
		deleteConfirm: "Do you really want to delete client?",
			controller: {
				loadData: function (filter) {
					return $.ajax({
						datatype: "json",
						type: "GET",
						url: "/factories/list",
						data: filter,
						success: function (html) {
							var pi = filter.pageIndex || pageIndex; var ps = filter.pageSize || pageSize; var showing = "Showing <b>"; var pis = (pi * ps);var i = ((pi-1) * ps) +1;showing += i+" - "+pis;showing += "</b> of " + html.itemsCount;$(".summary").html(showing);$(".jsgrid-pager-container").addClass("paginaton");
						}
					});
				},
				updateItem: function (item) {return $.ajax({type: "PUT",url: "/factories",data: item});},
				deleteItem: function (item) {return $.ajax({type: "DELETE",url: "/factories",data: item});}
			},
			fields: [
				{name:"name", type: "text", width: 90},
				{name:"address", type: "text", width: 90},
				{name:"city", type: "text", width: 90},
				{name:"province", type: "text", width: 90},
				{name:"code", type: "text", width: 90},
				{name:"status", type: "text", width: 90},{type:"control"},
				{type: "control", width: 100, editButton: true,deleteButton:true,
				itemTemplate: function (value, item) {
					var $result = jsGrid.fields.control.prototype.itemTemplate.apply(this, arguments);
					var $customViewButton = $("<button>").attr({class: "btn btn-info btn-xs"}).html("<span class='glyphicon glyphicon-eye-open'></span>").click(function (e) {location.href = "/factories/view/" + item.id; e.stopPropagation();});
					var $customEditButton = $("<button>").attr({class: "btn btn-success btn-xs"}).html("<span class='glyphicon glyphicon-pencil'></span>").click(function (e) {location.href = "/factories/update/" + item.id; e.stopPropagation();});
					return $("<div>").append($customViewButton).append("   ").append($customEditButton).append("    ");
					}
				}
			]
		});
</script>